---
// Formspree form ID - you'll need to replace this with your own
const formspreeId = "your_form_id"; // Will be replaced during GitHub Pages deployment
---

<section id="contact" class="contact-section">
  <div class="container">
    <h2 class="section-title">Contact</h2>
    <p class="section-subtitle">Get in Touch</p>

    <div class="contact-card">
      <form id="contact-form" class="contact-form" action={`https://formspree.io/f/${formspreeId}`} method="POST">
        <div class="form-group">
          <div class="form-label">
            <span class="form-icon">👤</span>
            <label for="name">Name</label>
          </div>
          <input type="text" id="name" name="name" required class="form-input">
        </div>

        <div class="form-group">
          <div class="form-label">
            <span class="form-icon">✉️</span>
            <label for="email">Email</label>
          </div>
          <input type="email" id="email" name="email" required class="form-input">
        </div>

        <div class="form-group">
          <div class="form-label">
            <span class="form-icon">💬</span>
            <label for="message">Message</label>
          </div>
          <textarea id="message" name="message" rows="5" required class="form-input"></textarea>
        </div>

        <div class="form-submit">
          <button type="submit" class="submit-button">Send Message</button>
        </div>
      </form>
    </div>

    <div class="contact-info">
      <div class="contact-links">
        <a href="mailto:ciarankearney2013@hotmail.com" class="contact-link">
          <span class="contact-icon">📧</span>
          ciarankearney2013@hotmail.com
        </a>
        <a href="tel:+353872363416" class="contact-link">
          <span class="contact-icon">📱</span>
          +353 87 236 3416
        </a>
      </div>

      <div class="social-links">
        <a href="https://linkedin.com/in/ciarán-kearney" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
            <rect width="4" height="12" x="2" y="9" />
            <circle cx="4" cy="4" r="2" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  // Form handling for contact section
  function initContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;

    if (form) {
      // Additional client-side validation can be added here
      form.addEventListener('submit', (e) => {
        // Allow the form submission to continue to Formspree
        // You can add loading indicators or other UI elements here
        console.log('Form submitted');
      });
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    initContactForm();
  });
</script>
