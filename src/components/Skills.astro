---
// Define skill categories and skills
const skillCategories = [
  {
    title: 'General Software',
    skills: [
      { icon: '📊', name: 'Microsoft Office' },
      { icon: '🎮', name: 'Unity' },
      { icon: '🎨', name: 'Blender' }
    ]
  },
  {
    title: 'Automation Software',
    skills: [
      { icon: '🔧', name: 'Sysmac Studio' },
      { icon: '🏭', name: 'TIA Portal' },
      { icon: '👁️', name: 'Cognex' }
    ]
  },
  {
    title: 'CAD Software',
    skills: [
      { icon: '📐', name: 'Autodesk' },
      { icon: '✏️', name: 'Creo Parametric' },
      { icon: '🔍', name: 'Solidworks' }
    ]
  },
  {
    title: 'Acoustic Software',
    skills: [
      { icon: '🔊', name: 'SoundPlan' },
      { icon: '🎵', name: 'Odeon Room Acoustics' },
      { icon: '📢', name: 'Noise Tools' },
      { icon: '🧱', name: 'Insul' },
      { icon: '👷', name: 'Noise at Work' }
    ]
  },
  {
    title: 'Languages',
    skills: [
      { icon: '💻', name: 'C#' },
      { icon: '📝', name: 'LATEX' },
      { icon: '📊', name: 'Matlab' },
      { icon: '📈', name: 'Excel VBA' }
    ]
  }
];

// Define certificates
const certificates = [
  { icon: '🔐', name: 'Fás Safe Pass' },
  { icon: '📋', name: 'Engineers Ireland Technical Report Writing' },
  { icon: '🚗', name: 'Full Irish Driver\'s Licence' }
];
---

<section id="skills" class="skills-section">
  <div class="container">
    <h2 class="section-title">Skills</h2>
    <p class="section-subtitle">Technical Proficiencies</p>

    <div class="skills-container">
      {skillCategories.map(category => (
        <div class="skill-category">
          <h3>{category.title}</h3>
          <div class="skills-grid">
            {category.skills.map(skill => (
              <div class="skill-item">
                <div class="skill-icon">{skill.icon}</div>
                <span>{skill.name}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Certificates Section -->
    <div class="certificates-section">
      <h2 class="section-title">Certificates</h2>
      <p class="section-subtitle">Professional Qualifications</p>

      <div class="certificates-grid">
        {certificates.map(cert => (
          <div class="certificate-item">
            <div class="certificate-icon">{cert.icon}</div>
            <span>{cert.name}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
