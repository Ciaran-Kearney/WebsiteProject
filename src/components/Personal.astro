</section>

<style>
  .personal-section {
    padding: 4rem 0;
  }

  .personal-intro {
    max-width: 800px;
    margin: 2rem auto;
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .achievement-card {
    position: relative;
    background: linear-gradient(
      135deg,
      rgba(10, 25, 41, 0.85) 0%,
      rgba(6, 19, 32, 0.8) 100%
    );
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 80px;
    cursor: pointer;
    margin-bottom: 0;
  }

  .achievement-card:hover {
    transform: translateY(-2px);
    border-color: var(--accent-primary);
    box-shadow: 0 4px 20px rgba(0, 180, 216, 0.15);
  }

  .achievement-card.expanded {
    height: auto;
    min-height: 460px;
    cursor: default;
    margin-bottom: 2rem;
  }

  .achievement-header {
    padding: 20px;
    position: relative;
    z-index: 2;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }

  .achievement-card.expanded .achievement-header {
    border-bottom-color: var(--border-subtle);
  }

  .achievement-header h3 {
    color: var(--text-bright);
    margin: 0;
    font-size: 1.2rem;
  }

  .achievement-content {
    padding: 20px;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.3s ease;
    pointer-events: none;
    max-height: 0;
    overflow: hidden;
  }

  .achievement-card.expanded .achievement-content {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
    max-height: 1000px;
  }

  .achievement-description {
    color: var(--text-muted);
    margin-bottom: 20px;
    line-height: 1.6;
  }

  .media-preview {
    width: 100%;
    height: 250px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    overflow: hidden;
    position: relative;
  }

  .media-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.4);
    color: var(--text-bright);
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .media-placeholder:hover {
    background: rgba(0, 0, 0, 0.6);
  }

  .play-button {
    background: none;
    border: none;
    color: var(--text-bright);
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: pointer;
    padding: 10px 20px;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .play-button:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.05);
  }

  .play-icon {
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .achievement-card.expanded {
      min-height: 420px;
    }

    .media-preview {
      height: 200px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const achievementCards = document.querySelectorAll('.achievement-card');
    const youtubePreview = document.querySelector('.youtube-preview');

    // Function to create YouTube iframe
    function createYoutubeIframe(videoId: string) {
      const iframe = document.createElement('iframe');
      iframe.width = '100%';
      iframe.height = '100%';
      // Remove autoplay from the URL
      iframe.src = `https://www.youtube.com/embed/${encodeURIComponent(videoId)}?rel=0&modestbranding=1`;
      iframe.title = 'El Chorro Blue Line Climb';
      iframe.setAttribute('frameborder', '0');
      iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture');
      iframe.setAttribute('allowfullscreen', '');
      iframe.setAttribute('sandbox', 'allow-scripts allow-same-origin allow-presentation');
      iframe.setAttribute('loading', 'lazy');
      iframe.setAttribute('referrerpolicy', 'no-referrer-when-downgrade');
      return iframe;
    }

    // Handle card clicks
    achievementCards.forEach(card => {
      card.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent document click from immediately closing
        card.classList.toggle('expanded'); // Simply toggle the expanded state
      });

      // Prevent collapse when clicking on content
      const content = card.querySelector('.achievement-content');
      content?.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent card from toggling when clicking content
      });
    });

    // Close all cards when clicking outside
    document.addEventListener('click', () => {
      achievementCards.forEach(card => {
        card.classList.remove('expanded');
      });
    });

    // Handle YouTube preview click
    if (youtubePreview) {
      const videoId = youtubePreview.getAttribute('data-video-id');
      const placeholder = youtubePreview.querySelector('.media-placeholder');

      placeholder?.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent card from toggling when clicking video
        if (videoId) {
          const iframe = createYoutubeIframe(videoId);
          youtubePreview.innerHTML = '';
          youtubePreview.appendChild(iframe);
        }
      });
    }
  });
</script> 
