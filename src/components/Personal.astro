<style>
  .personal-section {
    padding: 4rem 0;
  }

  .personal-intro {
    max-width: 800px;
    margin: 2rem auto;
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .achievement-card {
    position: relative;
    background: linear-gradient(
      135deg,
      rgba(10, 25, 41, 0.85) 0%,
      rgba(6, 19, 32, 0.8) 100%
    );
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 80px;
    cursor: pointer;
  }

  .achievement-card.expanded {
    height: 460px;
  }

  .achievement-header {
    position: relative;
    display: flex;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-subtle);
    background: inherit;
    z-index: 3;
  }

  .achievement-header h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--text-bright);
  }

  .achievement-content {
    position: absolute;
    top: 80px;
    left: 0;
    right: 0;
    padding: 0;
    height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .achievement-card.expanded .achievement-content {
    height: 380px;
    opacity: 1;
    padding: 1.5rem;
  }

  .achievement-description {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .media-preview {
    height: 240px;
    border-radius: 8px;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.2);
    position: relative;
  }

  .media-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .media-placeholder {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    background: rgba(0, 0, 0, 0.6);
  }

  .play-button {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    background: none;
    border: none;
    color: var(--text-bright);
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .play-button:hover {
    transform: scale(1.1);
  }

  .play-icon {
    font-size: 2rem;
    color: var(--accent-primary);
  }

  @media (max-width: 768px) {
    .achievements-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const achievementCards = document.querySelectorAll('.achievement-card');
    const youtubePreview = document.querySelector('.youtube-preview');

    // Function to create YouTube iframe
    function createYoutubeIframe(videoId: string) {
      const iframe = document.createElement('iframe');
      iframe.width = '100%';
      iframe.height = '100%';
      iframe.src = `https://www.youtube.com/embed/${encodeURIComponent(videoId)}?autoplay=1&rel=0&modestbranding=1`;
      iframe.title = 'El Chorro Blue Line Climb';
      iframe.setAttribute('frameborder', '0');
      iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture');
      iframe.setAttribute('allowfullscreen', '');
      iframe.setAttribute('sandbox', 'allow-scripts allow-same-origin allow-presentation');
      iframe.setAttribute('loading', 'lazy');
      iframe.setAttribute('referrerpolicy', 'no-referrer-when-downgrade');
      return iframe;
    }

    // Handle YouTube preview click
    if (youtubePreview) {
      const videoId = youtubePreview.getAttribute('data-video-id');
      const placeholder = youtubePreview.querySelector('.media-placeholder');

      placeholder?.addEventListener('click', () => {
        if (videoId) {
          const iframe = createYoutubeIframe(videoId);
          youtubePreview.innerHTML = '';
          youtubePreview.appendChild(iframe);
        }
      });
    }

    // Handle achievement card expansion
    achievementCards.forEach(card => {
      const button = card.querySelector('.expand-btn');
      button?.addEventListener('click', (e) => {
        e.stopPropagation();
        card.classList.toggle('expanded');
      });
    });
  });
</script> 
