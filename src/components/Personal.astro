<style>
  .personal-section {
    padding: 4rem 0;
  }

  .personal-intro {
    max-width: 800px;
    margin: 2rem auto;
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .achievement-card {
    position: relative;
    background: linear-gradient(
      135deg,
      rgba(10, 25, 41, 0.85) 0%,
      rgba(6, 19, 32, 0.8) 100%
    );
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 80px;
    cursor: pointer;
  }

  .achievement-card.expanded {
    height: 460px;
  }

  .achievement-header {
    position: relative;
    display: flex;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-subtle);
    background: inherit;
    z-index: 3;
  }

  .achievement-header h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--text-bright);
  }

  .achievement-content {
    position: absolute;
    top: 80px;
    left: 0;
    right: 0;
    padding: 0;
    height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .achievement-card.expanded .achievement-content {
    height: 380px;
    opacity: 1;
    padding: 1.5rem;
  }

  .achievement-description {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .media-preview {
    height: 240px;
    border-radius: 8px;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.2);
  }

  .media-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .media-placeholder {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .achievements-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const achievementCards = document.querySelectorAll('.achievement-card');

    // Function to close all cards
    function closeAllCards() {
      achievementCards.forEach(card => {
        card.classList.remove('expanded');
      });
    }

    // Add click handler to each card
    achievementCards.forEach(card => {
      const expandBtn = card.querySelector('.expand-btn');
      
      // Handle card click
      card.addEventListener('click', (e) => {
        // Don't trigger if clicking the expand button
        if (e.target.closest('.expand-btn')) return;
        e.stopPropagation();
        card.classList.toggle('expanded');
      });

      // Handle expand button click
      expandBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        card.classList.toggle('expanded');
      });
    });

    // Close all cards when clicking outside
    document.addEventListener('click', () => {
      closeAllCards();
    });
  });
</script> 