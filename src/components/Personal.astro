<script>
  // Intersection Observer for lazy loading
  const cardObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const card = entry.target;
        initCard(card);
        cardObserver.unobserve(card);
      }
    });
  }, { threshold: 0.1 });

  // Observe all achievement cards
  document.querySelectorAll('.achievement-card').forEach(card => {
    cardObserver.observe(card);
  });

  function initCard(card) {
    const content = card.querySelector('.achievement-content');
    let isExpanded = false;

    function toggleCard(e) {
      e.stopPropagation();
      
      if (!isExpanded) {
        // Close other cards first
        document.querySelectorAll('.achievement-card.expanded').forEach(otherCard => {
          if (otherCard !== card) {
            otherCard.classList.remove('expanded');
          }
        });
      }
      
      card.classList.toggle('expanded');
      isExpanded = !isExpanded;
    }

    // Add click handlers
    card.addEventListener('click', toggleCard);
    content?.addEventListener('click', e => e.stopPropagation());

    // Initialize YouTube facades if present
    const facade = card.querySelector('.youtube-facade');
    if (facade) {
      const videoId = facade.dataset.videoId;
      const playButton = facade.querySelector('.play-button');

      playButton?.addEventListener('click', (e) => {
        e.stopPropagation();
        
        // Create and insert iframe only when clicked
        const iframe = document.createElement('iframe');
        iframe.setAttribute('frameborder', '0');
        iframe.setAttribute('allowfullscreen', '1');
        iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture');
        iframe.setAttribute('width', '100%');
        iframe.setAttribute('height', '100%');
        iframe.setAttribute('src', `https://www.youtube.com/embed/${videoId}?autoplay=1`);
        
        facade.innerHTML = '';
        facade.appendChild(iframe);
        facade.style.cursor = 'default';
      });
    }
  }

  // Close cards when clicking outside
  document.addEventListener('click', () => {
    document.querySelectorAll('.achievement-card.expanded').forEach(card => {
      card.classList.remove('expanded');
    });
  });
</script>

<style>
  .personal-section {
    padding: 4rem 0;
  }

  .personal-intro {
    max-width: 800px;
    margin: 2rem auto;
    text-align: center;
    line-height: 1.8;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .achievement-card {
    position: relative;
    background: linear-gradient(
      135deg,
      rgba(10, 25, 41, 0.85) 0%,
      rgba(6, 19, 32, 0.8) 100%
    );
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 80px;
    cursor: pointer;
    margin-bottom: 0;
  }

  .achievement-card:hover {
    transform: translateY(-2px);
    border-color: var(--accent-primary);
    box-shadow: 0 4px 20px rgba(0, 180, 216, 0.15);
  }

  .achievement-card.expanded {
    height: auto;
    min-height: 460px;
    cursor: default;
    margin-bottom: 2rem;
  }

  .achievement-header {
    padding: 20px;
    position: relative;
    z-index: 2;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }

  .achievement-card.expanded .achievement-header {
    border-bottom-color: var(--border-subtle);
  }

  .achievement-header h3 {
    color: var(--text-bright);
    margin: 0;
    font-size: 1.2rem;
  }

  .achievement-content {
    padding: 20px;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.3s ease;
    pointer-events: none;
    max-height: 0;
    overflow: hidden;
  }

  .achievement-card.expanded .achievement-content {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
    max-height: 1000px;
  }

  .achievement-description {
    color: var(--text-muted);
    margin-bottom: 20px;
    line-height: 1.6;
  }

  .media-preview {
    width: 100%;
    height: 250px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    overflow: hidden;
    position: relative;
  }

  .media-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.4);
    color: var(--text-bright);
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .media-placeholder:hover {
    background: rgba(0, 0, 0, 0.6);
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 68px;
    height: 48px;
    background-color: rgba(0, 0, 0, 0.8);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s;
  }

  .play-button:hover {
    background-color: var(--accent-primary);
  }

  .play-icon {
    width: 24px;
    height: 24px;
    color: white;
  }

  @media (max-width: 768px) {
    .achievement-card.expanded {
      min-height: 420px;
    }

    .media-preview {
      height: 200px;
    }
  }

  .youtube-facade {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    background: #000;
    cursor: pointer;
    border-radius: 8px;
    overflow: hidden;
  }

  .facade-thumbnail {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .facade-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style> 
