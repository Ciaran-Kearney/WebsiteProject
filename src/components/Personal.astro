<style>
  .personal-section {
    padding: 4rem 0;
  }

  .personal-intro {
    max-width: 800px;
    margin: 2rem auto;
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .achievement-card {
    position: relative;
    background: linear-gradient(
      135deg,
      rgba(10, 25, 41, 0.85) 0%,
      rgba(6, 19, 32, 0.8) 100%
    );
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 80px; /* Initial height when collapsed */
    cursor: pointer; /* Added cursor pointer */
  }

  .achievement-card.expanded {
    height: 460px; /* Increased height when expanded */
  }

  .achievement-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--primary-bg);
    border-radius: 12px;
    z-index: -1;
  }

  .achievement-header {
    position: relative;
    display: flex;
    align-items: center;
    padding: 1.5rem;
    gap: 1rem;
    border-bottom: 1px solid var(--border-subtle);
    background: inherit;
    z-index: 3;
  }

  .achievement-header h3 {
    flex: 1;
    margin: 0;
    font-size: 1.1rem;
    color: var(--text-bright);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .expand-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .plus-icon {
    width: 20px;
    height: 20px;
    position: relative;
  }

  .plus-icon::before,
  .plus-icon::after {
    content: '';
    position: absolute;
    background-color: var(--accent-primary);
    transition: all 0.3s ease;
  }

  .plus-icon::before {
    width: 2px;
    height: 20px;
    left: 9px;
    top: 0;
  }

  .plus-icon::after {
    width: 20px;
    height: 2px;
    left: 0;
    top: 9px;
  }

  .achievement-content {
    position: absolute;
    top: 85px; /* Height of header */
    left: 0;
    right: 0;
    padding: 0;
    height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .achievement-card.expanded .achievement-content {
    height: 375px; /* Increased content height */
    opacity: 1;
    padding: 1.5rem;
  }

  .achievement-card.expanded .expand-btn {
    transform: rotate(45deg);
  }

  .achievement-description {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .media-preview {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    height: 240px; /* Increased height for media container */
  }

  .media-placeholder {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    font-size: 1.1rem;
  }

  .media-preview img,
  .media-preview video {
    width: 100%;
    height: 240px; /* Increased height for media */
    object-fit: cover;
    display: none;
  }

  .media-preview.loaded img,
  .media-preview.loaded video {
    display: block;
  }

  .media-preview.loaded .media-placeholder {
    display: none;
  }

  @media (max-width: 768px) {
    .achievements-grid {
      grid-template-columns: 1fr;
      padding: 0 1rem;
    }

    .achievement-card {
      height: 85px;
    }

    .achievement-card.expanded {
      height: 460px;
    }

    .achievement-description {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  // Handle card expansion
  document.querySelectorAll('.achievement-card').forEach(card => {
    const btn = card.querySelector('.expand-btn');
    
    // Make the entire card clickable
    card.addEventListener('click', (e) => {
      // Don't trigger if clicking on media preview or the button
      if (e.target.closest('.media-preview') || e.target.closest('.expand-btn')) return;
      toggleCard(card, btn);
    });

    // Handle button click separately
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleCard(card, btn);
    });

    // Helper function to toggle card state
    function toggleCard(card, btn) {
      card.classList.toggle('expanded');
      btn.style.transform = card.classList.contains('expanded') ? 'rotate(45deg)' : 'rotate(0deg)';
    }
  });

  // Handle media loading
  document.querySelectorAll('.media-preview').forEach(preview => {
    preview.addEventListener('click', (e) => {
      e.stopPropagation(); // Prevent card expansion when clicking media
      if (preview.classList.contains('loaded')) return;

      const mediaUrl = preview.dataset.media;
      const mediaType = preview.dataset.type;

      if (mediaType === 'image') {
        const img = new Image();
        img.src = mediaUrl;
        img.alt = 'Achievement photo';
        img.onload = () => {
          preview.appendChild(img);
          preview.classList.add('loaded');
        };
      } else if (mediaType === 'video') {
        const video = document.createElement('video');
        video.src = mediaUrl;
        video.controls = true;
        video.onloadeddata = () => {
          preview.appendChild(video);
          preview.classList.add('loaded');
        };
      }
    });
  });
</script> 
